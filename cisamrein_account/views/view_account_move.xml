<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <!-- Inherit Form View to Modify it -->
       <record id="account_form_view" model="ir.ui.view">
           <field name="name">account.move.form</field>
           <field name="model">account.move</field>
           <field name="inherit_id" ref="account.view_move_form"/>
           <field name="arch" type="xml">
               <xpath expr="//notebook/page[1]/field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="replace">
                   <!-- Add your fields or attributes here -->
                   <field name="item" force_save="1"/>
                   <field name="product_id"/>
                   <field name="internal_ref"/>
                   <field name="customer_ref"/>
                   <field name="material_origin"/>
               </xpath>
           </field>
       </record>
    </data>
</odoo>
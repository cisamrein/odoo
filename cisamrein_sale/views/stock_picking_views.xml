<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="stock_picking_form" model="ir.ui.view">
			<field name="name">stock.picking.form</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="replace">
					<field name="item"/>
					<field name="product_id"/>
					<field name="product_default_code"/>
					<field name="customer_ref" invisible="context.get('default_picking_type_id') == 1" optional="hide"/>
					<field name="material_origin" invisible="context.get('default_picking_type_id') == 1" optional="hide"/>
					<!--<field name="product_description_sale"/>-->
				</xpath>
				<xpath expr="//field[@name='move_ids_without_package']" position="after">
					<group>
						<field name="include_document"/>
					</group>
				</xpath>
				<xpath expr="//field[@name='origin']" position="after">
				    <field name="cmd_customer_ref"/>
				</xpath>
			</field>
		</record>
	
	</data>
</odoo>